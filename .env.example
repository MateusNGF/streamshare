# Database connection string for local Postgres (Docker)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/streamshare?schema=public"

# JWT Authentication
JWT_SECRET="your-super-secret-jwt-key-change-in-production-min-32-chars"

# Application URL
NEXT_PUBLIC_URL="http://localhost:3000"

# NextAuth (when implemented)
# NEXTAUTH_SECRET="your-secret-here"
# NEXTAUTH_URL="http://localhost:3000"

# API URLs
# NEXT_PUBLIC_API_URL="http://localhost:3000/api"

# Email Configuration (SMTP/Nodemailer)
# Deixe vazio para modo de desenvolvimento (emails não serão enviados)
# Para Gmail: smtp.gmail.com, porta 587, use App Password
# Para Outlook: smtp-mail.outlook.com, porta 587
# Para servidor customizado: configure conforme seu provedor
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"  # true para porta 465, false para 587
SMTP_USER="seu-email@gmail.com"
SMTP_PASS="sua-senha-ou-app-password"

# Email Sender Configuration
EMAIL_FROM="StreamShare <noreply@streamshare.com>"
EMAIL_REPLY_TO="suporte@streamshare.com"
