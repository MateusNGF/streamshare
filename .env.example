# -----------------------------------------------------------------------------
# StreamShare - Environment Variables Configuration
# -----------------------------------------------------------------------------
# Copy this file to .env and fill in the values.
# IMPORTANT: Never commit the .env file to version control.

# --- DATABASE ---
# Database connection string for Prisma (PostgreSQL)
# Local Docker: "postgresql://postgres:postgres@localhost:5432/streamshare?schema=public"
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/streamshare?schema=public"

# --- AUTHENTICATION ---
# Secret for JWT token generation and verification
JWT_SECRET="your-super-secret-jwt-key"

# --- SECURITY & ENCRYPTION ---
# Keys used for encrypting sensitive data (min 32 chars recommended)
# Used for streaming credentials and other sensitive info
ENCRYPTION_KEY="your-32-chars-long-encryption-key"
CREDENTIALS_ENCRYPTION_KEY="your-other-32-chars-encryption-key"
SHARE_SECRET="secret-for-sharing-links"

# --- APPLICATION CONFIG ---
# Base URLs for the application
NEXT_PUBLIC_URL="http://localhost:3000"
NEXT_PUBLIC_URL="http://localhost:3000"
NODE_ENV="development"

# --- CRON JOBS ---
# Enable/Disable background cron jobs
ENABLE_CRON=true
# Secret for triggering cron jobs via API
CRON_SECRET="your-cron-secret-here"

# --- MERCADO PAGO (Payment Gateway) ---
# Access Token from Mercado Pago Dashboard (Production or Sandbox)
MERCADOPAGO_ACCESS_TOKEN="APP_USR-your-access-token"
# Webhook Secret for signature validation
MERCADOPAGO_WEBHOOK_SECRET="your-webhook-secret"
# Public URL for the webhook (must be accessible from internet)
MERCADOPAGO_WEBHOOK_URL="http://www.localhost:3000/api/webhooks/mercado-pago"
REQUIRE_WEBHOOK_SIGNATURE="false"

# Mercado Pago Plan IDs (Pre-approval/Subscriptions)
MERCADOPAGO_PLAN_PRO="your-plan-pro-id"
MERCADOPAGO_PLAN_BUSINESS="your-plan-business-id"

# --- EMAIL SERVICE (SMTP) ---
# SMTP configurations for sending emails (verify with your provider)
SMTP_HOST="smtp.ethereal.email"
SMTP_PORT="587"
SMTP_SECURE="false" # "true" for port 465, "false" for 587
SMTP_USER="user@ethereal.email"
SMTP_PASS="password"

# Default sender and reply-to addresses
EMAIL_FROM="StreamShare <noreply@streamshare.com.br>"
EMAIL_REPLY_TO="suporte@streamshare.com.br"
